<Window x:Class="ProjectWPF.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Регистрация" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин:" FontSize="14"/>
            <TextBox x:Name="RegisterLoginTextBox" Height="30" Margin="0,10"/>

            <TextBlock Text="Email:" FontSize="14"/>
            <TextBox x:Name="EmailTextBox" Height="30" Margin="0,10"/>

            <TextBlock Text="Пароль:" FontSize="14"/>
            <PasswordBox x:Name="RegisterPasswordBox" Height="30" Margin="0,10"/>

            <TextBlock Text="Капча:" FontSize="14" Margin="0,10,0,0"/>
            <TextBlock x:Name="CaptchaTextBlock" FontSize="16" FontWeight="Bold" Margin="0,5"/>
            <TextBox x:Name="CaptchaTextBox" Height="30" Margin="0,5"/>

            <Button Content="Зарегистрироваться" Width="150" Height="30" Margin="0,20" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
